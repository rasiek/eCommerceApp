<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_order_item"
        android:padding="@dimen/small_padding"
        >
        <TextView
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_id"
            android:id="@+id/label_order_id"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/label_order_id"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/order_id_item"
            android:textSize="25dp"
            android:textColor="@color/light_grey"
            android:text="A2343534"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:layout_marginTop="6dp"
            android:textSize="20dp"
            android:id="@+id/label_date_order"
            app:layout_constraintTop_toBottomOf="@id/label_order_id"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/date_order_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/label_date_order"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="12/12/2012"
            android:textSize="20dp"
            android:textColor="@color/light_grey"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/eye_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="6dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>